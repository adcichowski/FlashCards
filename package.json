{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/client",
    "packages/server"
  ],
  "devDependencies": {
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0"
  },
  "scripts": {
    "new-version": "lerna version --conventional-commits --yes",
    "pre-commit": "lint-staged",
    "eslint": "lerna run eslint --stream"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      " lerna run eslint --stream --fix",
      "prettier --write"
    ],
    "*.{json,md,yaml,yml,scss,css}": [
      "prettier --write"
    ],
    "*.js": "lerna run eslint --stream --cache --fix"
  },
  "dependencies": {
    "@commitlint/config-conventional": "^16.2.1",
    "commitlint": "^16.2.1",
    "prettier": "^2.5.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
